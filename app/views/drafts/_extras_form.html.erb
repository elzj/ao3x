<%= form_for @draft, url: '/drafts/new/extras', html: { class: 'form' } do |f| %>

  <h4>Co-Creators</h4>
  <div class="form-group">
    <%= f.label :cocreators %>
    <%= f.text_field :cocreators, class: 'form-control' %>
  </div>

  <h4>Series</h4>
  <div class="form-group">
    <%= f.fields_for :series do |series_form| %>
      <%= series_form.label :title %>
      <%= series_form.text_field :title, value: @draft.series_title, class: 'form-control' %>

      <%= series_form.label :position %>
      <%= series_form.text_field :position, value: @draft.series_position,class: 'form-control' %>     
    <% end %>
  </div>

  <h4>Collections</h4>
  <div class="form-group">
    <%= f.fields_for :collections do |col| %>
      <%= col.label :title %>
      <%= col.text_field :title, class: 'form-control' %>
    <% end %>
  </div>

  <%= f.hidden_field :id, value: @draft.id %>
  <p><%= f.submit 'Preview Draft', class: 'btn btn-secondary' %></p>
  <p><%= f.submit 'Post Work', class: 'btn btn-primary' %></p>

<% end %>
